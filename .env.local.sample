# dbt MCP Server Configuration for Local MCP + Container Database

# Tool Group Controls
DISABLE_DBT_CLI=false
DISABLE_SEMANTIC_LAYER=true
DISABLE_DISCOVERY=true
DISABLE_REMOTE=true

# CLI-Specific Configuration (for local MCP with container database)
DBT_PROJECT_DIR=/absolute/path/to/your/jaffle-shop
DBT_PATH=/absolute/path/to/your/.pyenv/shims/dbt
DBT_TARGET=local
DBT_CLI_TIMEOUT=30

# Required dummy values for disabled remote features
DBT_HOST=dummy
DBT_PROD_ENV_ID=12345
DBT_TOKEN=dummy

# Debug mode
DEBUG=false